{{> 'systems/shadowrun5e/dist/templates/common/List/ListHeader.hbs'
        name=(localize 'SR5.Spell.Spells')
        itemId='spell'
        icons=(ItemHeaderIcons 'spell')
        rightSide=(ItemHeaderRightSide 'spell')
}}
{{#each spells.notfound as |item i|}}
    {{> 'systems/shadowrun5e/dist/templates/common/List/ListItem.hbs'
            img=item.img
            name=item.name
            itemCssClass='subcategory-item'
            itemId=item._id
            icons=(ItemIcons item)
            rightSide=(ItemRightSide item)
            hasDesc="true"
            hasRoll="true"
            description=item.description.value
    }}
{{/each}}

