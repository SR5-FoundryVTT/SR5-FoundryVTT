{{> 'systems/shadowrun5e/dist/templates/common/List/ListHeader.hbs'
        name=(localize 'SR5.Labels.ActorSheet.MarkedIcons')
        itemId='mark'
        rightSide=(MarkListHeaderRightSide)
        icons=(MarkListHeaderIcons)
}}
{{#each markedDocuments}}
    {{> 'systems/shadowrun5e/dist/templates/common/List/ListItem.hbs'
            img=(speakerImg this.document)
            name=(speakerName this.document)
            additionalCssClass=(MatrixTargetCssClass this)
            itemImgCssClass='select-matrix-target'
            itemNameCssClass='open-matrix-target'
            itemUuid=this.document.uuid
            rightSide=(MatrixMarkedDocumentItemRightSide this)
            icons=(MatrixMarkedDocumentItemIcons this)
    }}
    {{! -- Overview of icons connected to the main icon (devices of persona) -- }}
    {{#each this.icons}}
        {{> 'systems/shadowrun5e/dist/templates/common/List/ListItem.hbs'
                img=(speakerImg this.document)
                name=(speakerName this.document)
                itemCssClass='subcategory-item'
                additionalCssClass=(MatrixTargetCssClass this)
                itemImgCssClass='select-matrix-target'
                itemNameCssClass='open-matrix-target'
                itemUuid=this.document.uuid
                rightSide=(MatrixMarkedDocumentItemRightSide this)
                icons=(MatrixMarkedDocumentItemIcons this)
        }}
    {{/each}}
{{/each}}
