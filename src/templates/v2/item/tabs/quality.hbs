<section class="tab hide-overflow{{#if tab.active}} active{{/if}}" data-group="{{tab.group}}" data-tab="{{tab.id}}">
    <div class="fill-container">
        <section class="standard-form scrollable">
            {{formGroup systemFields.type value=system.type localize=true rootId=@root.rootId disabled=@root.isPlayMode}}
            {{formGroup systemFields.rating value=system.rating rootId=@root.rootId disabled=@root.isPlayMode}}
            {{formGroup systemFields.karma value=system.karma rootId=@root.rootId disabled=@root.isPlayMode}}
        </section>
    </div>
</section>
