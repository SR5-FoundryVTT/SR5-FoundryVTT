<section class="tab hide-overflow{{#if tab.active}} active{{/if}}" data-group="{{tab.group}}" data-tab="{{tab.id}}">
    <div class="fill-container">
        <section class="standard-form scrollable">
            {{formGroup systemFields.type value=system.type rootId=@root.rootId disabled=@root.isPlayMode}}
            {{formGroup systemFields.pp value=system.pp rootId=@root.rootId disabled=@root.isPlayMode}}
            {{formGroup systemFields.level value=system.level rootId=@root.rootId disabled=@root.isPlayMode}}
            {{formGroup systemFields.drain value=system.drain rootId=@root.rootId disabled=@root.isPlayMode}}
        </section>
    </div>
</section>
