<div class="sheet-header">
    <img class="sheet-image" src="{{item.img}}" data-tooltip="{{item.name}}" data-edit="img" />
    <div class="sheet-header-labels">
        <div class="sheet-header-name">
            {{#if @root.isPlayMode}}
                {{#if system.description.source}}
                    <div>
                        <button type="button" data-action="openSource" data-tooltip="SR5.OpenSource">
                            {{#if sourceIsURL}}
                                <i class="fas fa-link"></i>
                            {{else if sourceIsPDF}}
                                <i class="fas fa-file-pdf"></i>
                            {{else if sourceIsUuid}}
                                <i class="fas fa-file"></i>
                            {{/if}}
                        </button>
                    </div>
                {{/if}}
            {{/if}}
            <input type="text" name="name" value="{{item.name}}" placeholder='{{localize "SR5.ItemName"}}' {{#if @root.isPlayMode}}disabled{{/if}}/>
        </div>
        {{#if @root.isEditMode}}
        <div class="sheet-header-source">
            <input
                class="display text"
                type="text"
                name="system.description.source"
                value="{{system.description.source}}"
                placeholder='{{localize "SR5.Source"}}'
            />
            {{#if system.importFlags.isFreshImport}}
                {{#if (itemMarking "ANY")}}
                    <button class="toggle-fresh-import-off" data-tooltip="SR5.MarkImportedItemTooltip">{{localize 'SR5.MarkImportedItemReviewed'}}</button>
                {{/if}}
            {{/if}}
        </div>
        {{/if}}
        {{#if @root.isPlayMode}}
            <div class="new-list-item" data-item-id="{{item.uuid}}">
                <div class="new-list-item-label-container">
                        {{#if system.technology.condition_monitor.max}}
                            {{> 'systems/shadowrun5e/dist/templates/v2/common/horizontal-cells.hbs'
                                name=(localize "SR5.ConditionMonitor")
                                value=system.technology.condition_monitor.value
                                max=system.technology.condition_monitor.max
                                id='matrix'
                                disabled=system.technology.condition_monitor.disabled
                            }}
                        {{/if}}
                </div>
                {{#if systemFields.technology}}
                    <div class="new-list-item-col qty-input-col">
                        <span>
                            <label>{{localize "SR5.Qty"}} </label>
                            <a class="hover-show-button"
                               data-action="removeOneQty"
                               data-tooltip="SR5.ItemSheet.Labels.RemoveOneQty">
                                <i class="fas fa-minus-square"></i>
                            </a>
                            <label>{{system.technology.quantity}}</label>
                            <a class="hover-show-button"
                               data-action="addOneQty"
                               data-tooltip="SR5.ItemSheet.Labels.AddOneQty">
                                <i class="fas fa-plus-square"></i>
                            </a>
                        </span>
                    </div>
                    <div class="new-list-item-icons">
                        <a data-action="toggleEquipped">
                            <i class="{{#if (isEquipped item)}}fas fa-circle-check{{else}}far fa-circle{{/if}}"></i>
                        </a>
                        {{#if (canBeWireless item)}}
                            {{#if (isBroken item)}}
                                <a data-tooltip="SR5.Broken" data-action="repair">
                                    <i class="fas fa-link-slash"></i>
                                </a>
                            {{else}}
                                <a data-action="toggleWireless">
                                    <i {{#if (isRunningSilent item)}}
                                    class="fa-duotone fa-wifi-fair"
                                    {{else if (isWireless item)}}
                                    class="fas fa-wifi"
                                    {{else}}
                                    class="fas fa-wifi-slash"
                                    {{/if}}
                                    ></i>
                                </a>
                            {{/if}}
                        {{/if}}
                    </div>
                {{/if}}
            </div>
        {{/if}}
    </div>
</div>
