{{!-- list-item expects an SR5Item to be passed in as 'item' --}}
<div class="new-list-item-container">
    <div class="new-list-item">
        <div class="new-list-item-label-container">
            {{> "systems/shadowrun5e/dist/templates/v2/list-items/item-roll-image.hbs" item }}
            {{> "systems/shadowrun5e/dist/templates/v2/common/import-flag.hbs" item }}
            <label
                class="{{#if system.importFlags.isFreshImport}}
                        {{#if (itemMarking "COLOR")}}fresh-import{{/if}}
                    {{/if}}">
                {{!-- allow overriding the name if provided --}}
                <a data-action="showItemDescription" data-item-id="{{item.uuid}}">
                    {{#if name}}
                        {{name}}
                    {{else}}
                        {{item.name}}
                    {{/if}}
                </a>
            </label>
        </div>

        <div class="new-list-item-col">
            <span>{{localizeOb item.system.target @root.config.matrixTarget}}</span>
        </div>
        <div class="new-list-item-col">
            <span>{{localizeOb item.system.duration @root.config.durations}}</span>
        </div>
        <div class="new-list-item-col">
            <span>{{item.system.fade}}</span>
        </div>

        <div class="new-list-item-icons">
            {{#if (isOwner item owner=@root.actor)}}
                {{> 'systems/shadowrun5e/dist/templates/v2/list-items/edit-delete-icons.hbs' item }}
            {{/if}}

            {{> 'systems/shadowrun5e/dist/templates/v2/list-items/open-source-icon.hbs' item }}
        </div>
    </div>
    <div class="new-list-item-description">
        {{{item.system.description.value}}}
    </div>
</div>
