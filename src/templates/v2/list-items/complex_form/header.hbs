<div class="list-item list-item-header {{cssClass}}">
    <div class="list-item-start">
        <label>
            {{localize label}}
        </label>
    </div>

    <div class="list-item-col midd-col">
        <label>{{localize "SR5.Target"}}</label>
    </div>
    <div class="list-item-col thicc-col">
        <label>{{localize "SR5.Duration"}}</label>
    </div>
    <div class="list-item-col skinny-col">
        <label>{{localize "SR5.Fade"}}</label>
    </div>

    {{#if @root.isEditMode}}
        <div class="list-item-icons">
            {{> "systems/shadowrun5e/templates/v2/list-items/header-add-icon.hbs" type }}
        </div>
    {{/if}}
</div>
