<div class="new-list-item new-list-item-header {{cssClass}}">
    <div class="new-list-item-label-container">
        <label>
            {{localize label}}
        </label>
    </div>

    <div class="new-list-item-col matrix-icon-col">
        <label>
            {{localize "SR5.Labels.Sheet.Type"}}
        </label>
    </div>

    <div class="new-list-item-col matrix-network-col">
        <label>
            {{localize "SR5.Labels.ActorSheet.Network"}}
        </label>
    </div>

    <div class="new-list-item-icons skinny-icons">
        <a data-action="targetsRefresh" data-tooltip="SR5.Refresh">
            <i class="fas fa-refresh"></i>
        </a>
    </div>
</div>
