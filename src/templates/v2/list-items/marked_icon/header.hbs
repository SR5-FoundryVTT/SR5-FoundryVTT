<div class="new-list-item new-list-item-header {{cssClass}}">
    <div class="new-list-item-label-container">
        <label>
            {{localize label}}
        </label>
    </div>

    <div class="new-list-item-col">
        <label>
            {{localize "SR5.Labels.Sheet.Type"}}
        </label>
    </div>

    <div class="new-list-item-col mark-input-col">
        <label>
            {{localize "SR5.Marks"}}
        </label>
    </div>

    <div class="new-list-item-icons">
        <a data-action="clearAllMarks" data-tooltip="SR5.ClearMarks">
            {{localize "SR5.Del"}}
            <i class="fas fa-trash"></i>
        </a>
    </div>
</div>
