{{> 'systems/shadowrun5e/dist/templates/v2/common/list-header.hbs'
        name=(localize 'SR5.Labels.ActorSheet.Rituals')
        itemId='ritual'
        icons=(ItemHeaderIcons 'ritual')
        rightSide=(ItemHeaderRightSide 'ritual')
}}
{{#each itemType.ritual as |item i|}}
    {{> 'systems/shadowrun5e/dist/templates/v2/common/list-item.hbs'
            img=item.img
            name=item.name
            itemId=item._id
            icons=(ItemIcons item)
            rightSide=(ItemRightSide item)
            hasDesc="true"
            hasRoll="true"
            description=item.description.value
    }}
{{/each}}
