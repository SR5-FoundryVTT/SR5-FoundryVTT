<div class="fill-container">
    <div class="new-list-item new-list-item-header">
        <div class="new-list-item-label-container">
            {{localize "SR5.Labels.ActorSheet.SpriteConfiguration"}}
        </div>
    </div>
    <section id="sprite-options-scroll" class="standard-form scrollable">
        <div class="form-group">
            <label>
                {{localize "SR5.Sprite.Technomancer"}}
            </label>
            <div class="form-fields">
                {{#if technomancer}}
                    <a class="content-link" draggable="true" data-link data-type="Actor" data-id="{{technomancer.id}}" data-uuid="{{technomancer.uuid}}">
                        <i class="fas fa-user"></i>{{technomancer.name}}
                        <a class="close technomancer-remove"><i class="fas fa-times"></i></a>
                    </a>
                {{else}}
                    <span data-tooltip="SR5.Tooltips.Actor.MissingTechnomancer">{{localize "SR5.Sprite.MissingTechnomancer"}}</span>
                {{/if}}
            </div>
        </div>
        {{formGroup systemFields.spriteType value=source.system.spriteType disabled=@root.isPlayMode localize=true }}
        {{formGroup systemFields.level value=source.system.level disabled=@root.isPlayMode }}
        {{formGroup systemFields.registered value=source.system.registered disabled=@root.isPlayMode }}
    </section>
</div>
