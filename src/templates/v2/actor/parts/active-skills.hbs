{{> 'systems/shadowrun5e/dist/templates/v2/common/list-header.hbs'
        name=(localize 'SR5.ActiveSkills')
        itemCssClass="skill-header"
        icons=(SkillHeaderIcons 'active')
        rightSide=(SkillHeaderRightSide 'active' filters)
}}
<div class="list-item">
    <div class="item-text skill-spec-item">
        <input
                id="filter-skills"
                class="display text left"
                type="text"
                value="{{filters.skills}}"
                name="filters.skills"
                placeholder="{{localize 'SR5.Filter'}}..."
        />
    </div>
</div>
<div class="scrollable">
    {{#each system.skills.active as |skill sid|}}
        {{> 'systems/shadowrun5e/dist/templates/v2/common/list-item.hbs'
                name=(localizeSkill skill)
                itemNameCssClass="skill-roll"
                itemId=sid
                itemType="skill"
                icons=(SkillIcons 'active' skill)
                rightSide=(SkillRightSide 'active' skill)
                hasRoll="true"
                additionalCssClass=(SkillAdditionCssClass skill)
        }}
    {{/each}}
</div>
