<section class="tab hide-overflow{{#if tab.active}} active{{/if}}" data-group="{{tab.group}}" data-tab="{{tab.id}}">
    <div class="fill-container standard-form">
        {{#if @root.isEditMode}}
            {{formGroup skillFields.description name=(concat skill_name '.description') value=skill.description rootId=@root.rootId}}
        {{else}}
            {{{skill.description}}}
        {{/if}}
    </div>
</section>
