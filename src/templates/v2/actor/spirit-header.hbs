<header class="flexrow">
    {{> 'systems/shadowrun5e/dist/templates/v2/actor/parts/profile-image.hbs'
        height='90px'
        width='90px'
    }}
    <div class="flexcol flex-end">
        <div class="block">
            {{> 'systems/shadowrun5e/dist/templates/v2/actor/parts/name-input.hbs' }}
        </div>
        <div class="attributes smooth">
            <div class="block">
                {{> 'systems/shadowrun5e/dist/templates/v2/actor/parts/condition-monitor.hbs'
                    id='stun'
                    track = system.track.stun
                }}
                {{> 'systems/shadowrun5e/dist/templates/v2/actor/parts/condition-monitor.hbs'
                    id='physical'
                    track = system.track.physical
                }}
            </div>
        </div>
    </div>
    <div class="flexcol flex-end">
        <div class="attributes center">
            {{> 'systems/shadowrun5e/dist/templates/v2/actor/parts/movement.hbs' }}
            {{> 'systems/shadowrun5e/dist/templates/v2/actor/parts/initiative.hbs' }}
        </div>
        <div>
            {{#> "systems/shadowrun5e/dist/templates/v2/common/name-line-block.hbs" name=(localize "SR5.Spirit.Services") }}
                <div class="item-text">
                    {{> 'systems/shadowrun5e/dist/templates/v2/common/value-input.hbs'
                        cssClass="attribute-input"
                        size="2"
                        maxLength="2"
                        value=system.services
                        name="system.services"
                    }}
                </div>
            {{/"systems/shadowrun5e/dist/templates/v2/common/name-line-block.hbs"}}
        </div>
    </div>
</header>
