<section class="tab hide-overflow{{#if tab.active}} active{{/if}}" data-group="{{tab.group}}" data-tab="{{tab.id}}">
    <div class="split-container">
        <div>
            <div class="new-list-item new-list-item-header">
                <div class="new-list-item-label-container">
                    <label>{{localize "SR5.Description"}}</label>
                </div>
            </div>
            {{#if @root.isEditMode}}
                {{formInput systemFields.description.fields.value value=source.system.description.value rootId=@root.rootId}}
            {{else}}
                {{{biographyHTML}}}
            {{/if}}
        </div>
        <div>
            <div class="scrollable">
                {{> 'systems/shadowrun5e/dist/templates/v2/list-items/quality/header.hbs'
                        label='SR5.ItemTypes.Quality'
                        type='quality' }}
                {{#each itemType.quality}}
                    {{> 'systems/shadowrun5e/dist/templates/v2/list-items/quality/item.hbs' item=this }}
                {{/each}}

                {{#ife actor.type 'character'}}
                    {{#if awakened}}
                        {{> 'systems/shadowrun5e/dist/templates/v2/actor/parts/metamagics.hbs' }}
                    {{/if}}
                    {{#if emerged}}
                        {{> 'systems/shadowrun5e/dist/templates/v2/actor/parts/echoes.hbs' }}
                    {{/if}}
                {{/ife}}
            </div>
        </div>
    </div>
</section>
