<section class="tab hide-overflow{{#if tab.active}} active{{/if}}" data-group="{{tab.group}}" data-tab="{{tab.id}}">
    <div class="split-container">
        <div>
            {{> 'systems/shadowrun5e/dist/templates/v2/common/list-header.hbs'
                    name=(localize 'SR5.Biography')
                    itemId='biography'
                    icons=(ItemHeaderIcons 'biography')
            }}
            {{editor biographyHTML target="system.description.value" button=true
                     editable=true engine="prosemirror" collaborate=false}}
        </div>
        <div>
            <div class="scrollable">
                {{> 'systems/shadowrun5e/dist/templates/v2/common/list-header.hbs'
                        name=(localize 'SR5.Quality')
                        itemId='quality'
                        icons=(ItemHeaderIcons 'quality')
                        rightSide=(ItemHeaderRightSide 'quality')
                }}
                {{#each itemType.quality as |item i|}}
                    {{> 'systems/shadowrun5e/dist/templates/v2/common/list-item.hbs'
                            img=item.img
                            name=item.name
                            itemId=item._id
                            icons=(ItemIcons item)
                            rightSide=(ItemRightSide item)
                            hasDesc="true"
                            hasRoll="true"
                            description=item.description.value
                    }}
                {{/each}}

                {{#ife actor.type 'character'}}
                    {{#if awakened}}
                        {{> 'systems/shadowrun5e/dist/templates/v2/actor/parts/metamagics.hbs' }}
                    {{/if}}
                    {{#if emerged}}
                        {{> 'systems/shadowrun5e/dist/templates/v2/actor/parts/echoes.hbs' }}
                    {{/if}}
                {{/ife}}
            </div>
        </div>
    </div>
</section>
