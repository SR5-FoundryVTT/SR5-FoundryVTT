<section class="tab hide-overflow{{#if tab.active}} active{{/if}}" data-group="{{tab.group}}" data-tab="{{tab.id}}">
    <div class="fill-container">
        <div class="new-list-item new-list-item-header header-for-scrollable">
            <div class="new-list-item-label-container">
                <label class="item-text item-name" for="select-inventory">{{localize 'SR5.Labels.Inventory.OpenInventory'}}</label>
                <div>
                    <select id="select-inventory" class="sr5-select">
                        {{#each inventories as |inventory name|}}
                            <option value="{{inventory.name}}" {{#ife ../selectedInventory inventory.name}}selected="selected"{{/ife}}>{{localize inventory.label}}</option>
                        {{/each}}
                    </select>
                </div>
                {{#if @root.isEditMode}}
                    {{#if (inventoryCanRename selectedInventory)}}
                    <a data-action="renameInventory" data-inventory="{{selectedInventory}}">
                        <i class="fas fa-pen-to-square"></i>
                    </a>
                    {{/if}}
                    {{#if (inventoryCanRemove selectedInventory)}}
                    <a data-action="removeInventory" data-inventory="{{selectedInventory}}">
                        <i class="fas fa-trash"></i>
                    </a>
                    {{/if}}
                {{/if}}
            </div>
            <div class="new-list-item-icons">
                {{#if @root.isEditMode}}
                <a data-action="createInventory" data-tooltip="SR5.Labels.ActorSheet.CreateInventory">
                    {{localize "SR5.Add"}}&nbsp;<i class="fas fa-plus"></i>
                </a>
                {{/if}}
                <a data-action="collapseAllInventories" data-tooltip="SR5.CollapseAll">
                    <i class="fas fa-chevrons-up"></i>
                </a>
                <a data-action="expandAllInventories" data-tooltip="SR5.ExpandAll">
                    <i class="fas fa-chevrons-down"></i>
                </a>
            </div>
        </div>
        <div class="scrollable">
            {{#each inventory.types as |section type|}}
                {{#if (or @root.isEditMode section.items.length)}}
                    {{> (concat "systems/shadowrun5e/dist/templates/v2/list-items/" type "/header.hbs")
                        label=section.label
                        isOpen=section.isOpen
                        type=type
                        rootId=@root.rootId }}
                    {{#if (or section.isOpen @root.isEditMode)}}
                        {{#each section.items}}
                            {{> (concat "systems/shadowrun5e/dist/templates/v2/list-items/" type "/item.hbs")
                                item=this
                                rootId=@root.rootId }}
                        {{/each}}
                    {{/if}}
                {{/if}}
            {{/each}}
        </div>
    </div>
</section>
