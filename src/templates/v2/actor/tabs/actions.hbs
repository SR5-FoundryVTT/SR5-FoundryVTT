<section class="tab hide-overflow{{#if tab.active}} active{{/if}}" data-group="{{tab.group}}" data-tab="{{tab.id}}">
    <div class="fill-container">
        {{> 'systems/shadowrun5e/dist/templates/v2/common/list-header.hbs'
            name=(localize 'SR5.Actions')
            itemId='action'
            icons=(ItemHeaderIcons 'action')
            rightSide=(ItemHeaderRightSide 'action')
            itemCssClass='header-for-scrollable'
            itemId='action'
        }}
        <div class="scrollable">
            {{#each itemType.action as |item iid|}}
                {{> 'systems/shadowrun5e/dist/templates/v2/common/list-item.hbs'
                    img=item.img
                    name=item.name
                    itemId=item._id
                    icons=(ItemIcons item)
                    rightSide=(ItemRightSide item)
                    hasDesc="true"
                    hasRoll="true"
                    description=item.description.value
                }}
            {{/each}}
        </div>
    </div>
</section>
