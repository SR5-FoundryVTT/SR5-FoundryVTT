<section class="tab hide-overflow{{#if tab.active}} active{{/if}}" data-group="{{tab.group}}" data-tab="{{tab.id}}">
    <div class="fill-container">
        <div class="scrollable">
            <!-- Local Document Effects. Actor and Item. -->
            {{> 'systems/shadowrun5e/dist/templates/v2/common/list-header.hbs'
                name=(localize 'SR5.Effects')
                itemCssClass='list-item-effect'
                rightSide=(ItemHeaderRightSide 'effects')
                icons=(ItemHeaderIcons 'effect')
                tooltip=(localize 'SR5.Tooltips.Effect.DocumentEffects')
            }}
            {{#each effects}}
            {{> 'systems/shadowrun5e/dist/templates/v2/common/list-item.hbs'
                img=(firstDefined this.img this.icon)
                name=this.name
                itemId=this.id
                itemType='ActiveEffect'
                icons=(EffectIcons this)
                rightSide=(EffectRightSide this)
                hasDesc=false
                hasRoll=false
                itemCssClass='list-item-effect'
                }}
            {{/each}}
            <!-- Owned Item Effects. Actor only. -->
            {{#if itemEffects}}
            {{> 'systems/shadowrun5e/dist/templates/v2/common/list-header.hbs'
                name=(localize 'SR5.Labels.Sheet.ItemEffects')
                tooltip=(localize 'SR5.Tooltips.Effect.ItemEffects')
                itemCssClass='list-item-effect'
                rightSide=(ItemHeaderRightSide 'itemEffects')
            }}
            {{#each itemEffects}}
            {{> 'systems/shadowrun5e/dist/templates/v2/common/list-item.hbs'
                img=(firstDefined this.img this.icon)
                name=this.sheetName
                itemId=this.uuid
                itemType='ActiveEffect'
                icons=(ItemEffectIcons this)
                rightSide=(EffectRightSide this)
                hasDesc=false
                hasRoll=false
                itemCssClass='list-item-effect'
                }}
            {{/each}}
            {{/if}}
        </div>
    </div>
</section>
