{
    "name": "shadowrun5e",
    "include": [ "src/**/*", "src/module/types/global.ts" ],
    "exclude": [ "node_modules", "**/*.spec.ts" ],
    "compilerOptions": {
        /* Language and Target */
        "target": "ESNext",
        "useDefineForClassFields": true,
        "moduleDetection": "auto",

        /* Modules */
        "rootDir": ".",
        "module": "esnext",
        "moduleResolution": "bundler",
        "baseUrl": "./",
        "types": [
            "fvtt-types",
            "vite/client",
            "@ethaks/fvtt-quench",
        ],
        "resolveJsonModule": true,
        "paths": {
            "@/*": ["./src/*"]
        },

        /* JavaScript Support */
        "allowJs": true,
        "checkJs": false,

        /* Emit */
        "outDir": "dist",
        // "sourceMap": true,

        /* Interop Constraints */
        "isolatedModules": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,

        /* Type Checking */
        "strict": true,
        "noImplicitAny": false,
        "noUnusedLocals": false,
        "noImplicitReturns": false,
        "noFallthroughCasesInSwitch": true,
        "noImplicitOverride": true,

        /* Completeness */
        "skipLibCheck": true,
        "incremental": true,
        "tsBuildInfoFile": "./.tsbuildinfo"
    }
}
