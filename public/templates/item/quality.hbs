<form class="{{cssClass}} wholesheet" autocomplete="off">
    {{> "systems/shadowrun5e/dist/templates/item/parts/header.hbs" }}
    <nav class="tabs" data-group="primary">
        <a class="item" data-tab="description">{{localize "SR5.Description"}}</a>
        <a class="item" data-tab="action">{{localize "SR5.Action"}}</a>
        <a class="item" data-tab="effects">{{ localize "SR5.Effects" }}</a>
    </nav>
    <section class="sheetbody">
        <div class="tab" data-group="primary" data-tab="description">
            <div class="flexrow align-start full-height">
                <div class="flexcol flex0">
                    <div class="technology">
                        <div class="flexrow nowrap">
                            <label>{{localize "SR5.QualityType"}}</label>
                            <select name="system.type" class="display">
                                {{#select system.type}} {{#each config.qualityTypes as |name type|}}
                                <option value="{{type}}">{{localize name}}</option>
                                {{/each}} {{/select}}
                            </select>
                        </div>
                        <div class="flexrow nowrap">
                            <label>{{localize "SR5.Rating"}}</label>
                            <input
                                class="display"
                                type="text"
                                size="2"
                                maxlength="2"
                                name="system.rating"
                                value="{{system.rating}}"
                                data-dtype="Number"
                                placeholder="0"
                            />
                        </div>
                        <div class="flexrow nowrap">
                            <label>{{localize "SR5.Karma"}}</label>
                            <input
                                class="display"
                                type="text"
                                size="2"
                                maxlength="3"
                                name="system.karma"
                                value="{{system.karma}}"
                                data-dtype="Number"
                                placeholder="0"
                            />
                        </div>
                    </div>
                </div>
                {{> "systems/shadowrun5e/dist/templates/item/parts/description.hbs"}}
            </div>
        </div>
        <div class="tab" data-group="primary" data-tab="action">
            <div class="tabbody">
                <div class="inventory">
                    <div class="scroll-area">
                        {{> "systems/shadowrun5e/dist/templates/item/parts/action.hbs" header="Test Details"}}
                        {{> "systems/shadowrun5e/dist/templates/item/parts/damage.hbs" header="Damage"}}
                        {{> "systems/shadowrun5e/dist/templates/item/parts/opposed.hbs" header="Opposed Test"}}
                    </div>
                </div>
            </div>
        </div>
        {{> "systems/shadowrun5e/dist/templates/actor/tabs/EffectsTab.hbs"}}
    </section>
</form>
