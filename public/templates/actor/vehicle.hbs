<form class="{{cssClass}} wholesheet" autocomplete="off">
    <header class="flexrow">
        {{> 'systems/shadowrun5e/dist/templates/actor/parts/ProfileImage.hbs'
            height='90px'
            width='90px'
        }}
        <div class="flexcol flex-end">
            <div class="flexrow">
                <div class="block">
                    {{> 'systems/shadowrun5e/dist/templates/actor/parts/NameInput.hbs' }}
                </div>
                <div class="attributes center">
                    {{> 'systems/shadowrun5e/dist/templates/actor/parts/vehicle/VehicleMovement.hbs' }}
                    {{> 'systems/shadowrun5e/dist/templates/actor/parts/Initiative.hbs' }}
                </div>
            </div>
            <div class="attributes smooth">
                <div class="block">
                    {{> 'systems/shadowrun5e/dist/templates/actor/parts/ConditionMonitor.hbs'
                        id='physical'
                        track = system.track.physical
                    }}
                </div>
            </div>
        </div>
    </header>
    <div class="attributes no-border">
        <div class="attribute row space-around">
            <div class="attribute-name Roll" data-roll-id="drone.pilot-vehicle">
                {{localize "SR5.Labels.ActorSheet.RollPilotVehicleTest"}}
            </div>
            <div data-tooltip="SR5.Defense" class="attribute-name Roll" data-roll-id="drone.perception">
                {{localize "SR5.Labels.ActorSheet.RollDronePerception"}}
            </div>
            <div data-tooltip="SR5.Soak" class="attribute-name Roll" data-roll-id="drone.infiltration">
                {{localize "SR5.Labels.ActorSheet.RollDroneInfiltration"}}
            </div>
            <div
                    data-tooltip="SR5.Roll"
                    class="attribute-name Roll fas fa-dice-six"
                    data-roll-id="prompt-roll"
            ></div>
            <div data-tooltip="SR5.Defense" class="attribute-name Roll" data-roll-id="defense">
                {{localize "SR5.RollDefense"}}
            </div>
            <div data-tooltip="SR5.Soak" class="attribute-name Roll" data-roll-id="damage-resist">
                {{localize "SR5.RollSoak"}}
            </div>
            <div class="attribute-name Roll" data-roll-id="armor">
                {{localize "SR5.RollArmor"}} ({{system.armor.value}})
            </div>
        </div>
    </div>
    <nav class="tabs" data-group="primary">
        <a class="item" data-tab="actions">{{localize "SR5.Actions"}}</a>
        <a class="item" data-tab="skills">{{localize "SR5.ActorTypes.Vehicle"}}</a>
        <a class="item" data-tab="inventory">{{localize "SR5.Gear"}}</a>
        <a class="item" data-tab="matrix">{{localize "SR5.Labels.ActorSheet.Matrix"}}</a>
        <a class="item" data-tab="description">{{ localize "SR5.Description" }}</a>
        <a class="item" data-tab="effects">{{ localize "SR5.Effects" }}</a>
        <a class="item" data-tab="misc">{{localize "SR5.Miscellaneous"}}</a>
    </nav>
    <section class="sheetbody tabsbody" data-group="primary">
        {{> "systems/shadowrun5e/dist/templates/actor/tabs/ActionsTab.hbs"}}
        {{> "systems/shadowrun5e/dist/templates/actor/tabs/vehicle/VehicleSkillsTab.hbs"}}
        {{> "systems/shadowrun5e/dist/templates/actor/tabs/vehicle/VehicleMatrixTab.hbs"}}
        {{> "systems/shadowrun5e/dist/templates/actor/tabs/InventoryTab.hbs"}}
        {{> "systems/shadowrun5e/dist/templates/actor/tabs/DescriptionTab.hbs"}}
        {{> "systems/shadowrun5e/dist/templates/actor/tabs/EffectsTab.hbs"}}
        {{> "systems/shadowrun5e/dist/templates/actor/tabs/MiscTab.hbs"}}
    </section>
</form>
