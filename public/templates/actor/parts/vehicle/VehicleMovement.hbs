{{#> "systems/shadowrun5e/dist/templates/common/Attribute.hbs" cssClass="no-grow"}}
    <div class="attribute-name">
        {{localize "SR5.Movement"}}
    </div>
    <div class="track">
        <div class="attribute-input-container">
            {{> 'systems/shadowrun5e/dist/templates/common/ValueInput.hbs'
                    cssClass="attribute-input"
                    title="SR5.WalkingSpeed"
                    size="4"
                    maxLength="4"
                    value=system.movement.walk.value
                    disabled="true"
            }}
        </div>
        <div class="track-slash"></div>
        <div class="attribute-input-container">
            {{> 'systems/shadowrun5e/dist/templates/common/ValueInput.hbs'
                    cssClass="attribute-input"
                    title="SR5.RunningSpeed"
                    size="4"
                    maxLength="4"
                    value=system.movement.run.value
                    disabled="true"
            }}
        </div>
    </div>
{{/"systems/shadowrun5e/dist/templates/common/Attribute.hbs"}}
