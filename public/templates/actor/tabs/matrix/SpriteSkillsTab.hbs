{{#> 'systems/shadowrun5e/dist/templates/common/TabWrapper.hbs' tabId='skills'}}
    <div class="inventory">
        <div class="attributes">
            {{#each config.matrixAttributes as |label key|}}
                {{> "systems/shadowrun5e/dist/templates/actor/parts/matrix/MatrixAttribute.hbs"
                        matrixAtt=(lookup ../system.matrix key)
                        key=key
                        label=label
                        matrixAttributes=../config/matrixAttributes
                }}
            {{/each}}
            {{> "systems/shadowrun5e/dist/templates/actor/parts/attributes/Attribute.hbs"
                    attributeId='resonance'
                    attribute=system.attributes.resonance
            }}
        </div>
        <div class="split-container">

            {{> 'systems/shadowrun5e/dist/templates/actor/parts/skills/ActiveSkillList.hbs' }}
            <!--Here needs to go the Sprite Config-->
                <div class= "item-section center sprite"> <!--Here starts the selector sprite-->
                    {{> 'systems/shadowrun5e/dist/templates/common/HeaderBlock.hbs' name=(localize "SR5.Labels.ActorSheet.SpriteConfiguration") }}
                    <div class="item-center">
                        <div class="list-item matrix">
                            <div class="list-item-content">
                                <div class="item-left">
                                    <div class="item-text item-name">
                                        {{localize "SR5.Sprite.Technomancer"}}
                                    </div>
                                </div>
                                <div class="item-right">
                                    {{#if technomancer}}
                                    <a class="content-link" draggable="true" data-link data-type="Actor" data-id="{{technomancer.id}}" data-uuid="{{technomancer.uuid}}">
                                        <i class="fas fa-user"></i>{{technomancer.name}}
                                        <a class="close technomancer-remove"><i class="fas fa-times"></i></a>
                                    </a>
                                    {{else}}
                                    <span data-tooltip="SR5.Tooltips.Actor.MissingTechnomancer">{{localize "SR5.Sprite.MissingTechnomancer"}}</span>
                                    {{/if}}
                                </div>
                            </div>    
                        </div>
                        <div class="list-item matrix">
                            <div class="list-item-content">
                                <div class="item-left">
                                    <div class="item-text item-name">
                                        {{localize "SR5.Sprite.Type"}}
                                    </div>
                                </div>
                                <div class="item-right">
                                    <div>
                                        <select name="system.spriteType" class="display">
                                            {{#select system.spriteType}} {{#each config.spriteTypes as |name type|}}
                                                <option value="{{type}}">{{localize name}}</option>
                                            {{/each}} {{/select}}
                                        </select>
                                    </div>
                                </div>
                            </div>    
                        </div>
                        <div class="list-item matrix">
                            <div class="list-item-content">
                                <div class="item-left">
                                    <div class="item-text item-name">
                                        {{localize "SR5.Sprite.Level"}}
                                    </div>
                                </div>
                                <div class="item-right">
                                    <div class="item-text">
                                        {{> 'systems/shadowrun5e/dist/templates/common/ValueInput.hbs'
                                                cssClass="attribute-input"
                                                size="2"
                                                maxLength="2"
                                                value=system.level
                                                name="system.level"
                                        }}
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="list-item matrix">
                            <div class="list-item-content">
                                <div class="item-left">
                                    <div class="item-text item-name">
                                        {{localize "SR5.Sprite.Registered"}}
                                    </div>
                                </div>
                                <div class="item-right">
                                    <div class="item-text">
                                        <input type="checkbox" class="checkbox" name="system.registered" {{checked system.registered}}/>
                                    </div>
                                </div>
                            </div>    
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{{/ 'systems/shadowrun5e/dist/templates/common/TabWrapper.hbs'}}
