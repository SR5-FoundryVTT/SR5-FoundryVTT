<form class="{{cssClass}} wholesheet" autocomplete="off">
    <header class="flexrow">
        {{> 'systems/shadowrun5e/dist/templates/actor/parts/ProfileImage.hbs' height='90px' width='90px' }}
        <div class="flexcol flex-end">
            <div class="flexrow">
                <div class="block">{{> 'systems/shadowrun5e/dist/templates/actor/parts/NameInput.hbs' }}</div>
                <div class="attributes smooth">
                    {{> 'systems/shadowrun5e/dist/templates/actor/parts/Initiative.hbs' }}
                </div>
            </div>
            <div class="attributes smooth">
                <div class="block">
                    {{> 'systems/shadowrun5e/dist/templates/actor/parts/ConditionMonitor.hbs'
                        id='matrix'
                        track = system.track.matrix
                    }}
                </div>
                <div class="attributes no-border">
                    <div class="attribute row space-around">
                    <div data-tooltip="SR5.Roll" class="attribute-name Roll fas fa-dice-six" data-roll-id="prompt-roll"></div>
                    </div>
                </div>
            </div>
        </div>
    </header>
    <nav class="tabs" data-group="primary">
        {{#if hasActions}}<a class="item" data-tab="actions">{{localize "SR5.Actions"}}</a>{{/if}}
        <a class="item" data-tab="actor">{{localize "SR5.Labels.ActorSheet.Matrix"}}</a>
        {{#if hasInventory }}<a class="item" data-tab="inventory">{{localize "SR5.Gear"}}</a>{{/if}}
        <a class="item" data-tab="effects">{{ localize "SR5.Effects" }}</a>
        <a class="item" data-tab="misc">{{localize "SR5.Miscellaneous"}}</a>
    </nav>
    <section class="sheetbody tabsbody" data-group="primary">
        {{> "systems/shadowrun5e/dist/templates/actor/tabs/ActionsTab.hbs"}} 
        {{> "systems/shadowrun5e/dist/templates/actor/tabs/ic/ICActorTab.hbs"}} 
        {{> "systems/shadowrun5e/dist/templates/actor/tabs/InventoryTab.hbs"}} 
        {{> "systems/shadowrun5e/dist/templates/actor/tabs/EffectsTab.hbs"}} 
        {{> "systems/shadowrun5e/dist/templates/actor/tabs/ic/ICMiscTab.hbs"}}
    </section>
</form>
